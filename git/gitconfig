[include]
	path = ~/.config/git-delta/themes.gitconfig

[user]
	name = {{name}}

[pull]
	rebase = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
	line-numbers = true
	features = arctic-fox
	#side-by-side = true

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = default

[hub]
	protocol = https

[alias]
  shallow = !git clone --depth 1

[init]
	defaultBranch = main

[credential "https://github.com"]
	helper = !pass github/cli
